# ============================================
# CONFIGURAÇÃO REACT SPA - ROTEAMENTO CLIENTE
# ============================================
RewriteEngine On

# Redirecionar todas as rotas para index.html (React Router)
# Exceto arquivos estáticos (CSS, JS, imagens, etc.)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule ^.*$ /index.html [L]

# ============================================
# PROTEÇÃO IP DURANTE DESENVOLVIMENTO 
# ============================================
<RequireAll>
    Require ip 84.20.19.90
    Require ip 152.233.1.44
</RequireAll>

# Mensagem de erro personalizada
ErrorDocument 403 "Site em desenvolvimento. Acesso restrito."

# Headers de segurança adicionais
<IfModule mod_headers.c>
    Header always set X-Robots-Tag "noindex, nofollow, noarchive, nosnippet, noimageindex"
</IfModule>

# ============================================
# SUPORTE PARA ARQUIVOS ESTÁTICOS DO REACT
# ============================================
# Garantir que arquivos JS e CSS sejam servidos corretamente
<Files ~ "\.(js|css)$">
    Header set Content-Type "text/plain"
</Files>

# Suporte para arquivos de build do Vite
<Files ~ "\.js$">
    Header set Content-Type "application/javascript"
</Files>

<Files ~ "\.css$">
    Header set Content-Type "text/css"
</Files>

# ============================================
# CACHE CONTROL ANTI-CACHE (FORÇAR ATUALIZAÇÃO)
# ============================================
<IfModule mod_expires.c>
    ExpiresActive Off
</IfModule>

<IfModule mod_headers.c>
    # Headers anti-cache mais agressivos
    Header always set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
    Header always set Pragma "no-cache"
    Header always set Expires "0"
    Header always unset ETag
    Header always set Last-Modified "Thu, 01 Jan 1970 00:00:00 GMT"
    
    # Headers específicos para HTML
    <FilesMatch "\.(html|htm)$">
        Header always set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
        Header always set Pragma "no-cache"
        Header always set Expires "0"
    </FilesMatch>
    
    # Headers para JS e CSS também (versioning)
    <FilesMatch "\.(js|css)$">
        Header always set Cache-Control "no-cache, max-age=0"
    </FilesMatch>
</IfModule>

# ============================================
# CONFIGURAÇÕES ADICIONAIS DE COMPATIBILIDADE
# ============================================
# Permitir acesso ao index.html
<Files "index.html">
    Require all granted
</Files>

# Permitir acesso aos assets
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
    Require all granted
</FilesMatch>